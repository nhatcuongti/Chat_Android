<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="15dp">>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_conversation_thumnail"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/asite"
            app:civ_border_color="@color/black"
            app:civ_border_width="0.1dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/item_name_in_chats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Bao Trung"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/item_last_message_in_chats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="This is last message that you receive"

                    android:textSize="10sp" />
        </LinearLayout>

</LinearLayout>